        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="Transparent">
        <Border BorderThickness="1" CornerRadius="3,3,0,0" BorderBrush="#2B3B58" Margin="0">
            <DockPanel Background="#FF2B3B58">
                <Label Content="Project Explorer" Height="21" VerticalAlignment="Top" Foreground="White" Padding="4,2,0,0"
                       DockPanel.Dock="Top" Style="{StaticResource VS_HeaderLabel}" />
                <Grid DockPanel.Dock="Top" Background="#FFCFD6E5" Height="50">
                    <StackPanel Margin="3,2,3,26" Orientation="Horizontal">
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="22" Height="22">
                            <Image />
                        </Button>
                    </StackPanel>
                    
                    <TextBox Name="txtSearch" Margin="1,26,1,2" Foreground="#FF666666" BorderBrush="#FFBDC4D1"
                             KeyDown="SearchTextBox_KeyDown" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                
                <TreeView Name="tvPoject" Background="#FFFFFFFF" BorderBrush="#F0F0F0" BorderThickness="1,0,1,1" 
                          DockPanel.Dock="Bottom" ItemsSource="{Binding First}" HorizontalContentAlignment="Stretch">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVis}, Mode=TwoWay}" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="11" Height="11" />
                                <TextBlock Text="{Binding Name}" Margin="3,0,0,0" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add">
                                <MenuItem Header="New Item..." Command="{Binding AddFileCommand}" />
                                <MenuItem Header="Existing Item..." Command="{Binding AddExistingFileCommand}" />
                                <MenuItem Header="New Folder..." Command="{Binding AddFolderCommand}" />
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="Rename" Command="{Binding RenameCommand}" />
                            <MenuItem Header="Delete" Command="{Binding DeleteCommand}" />
                        </ContextMenu>
                    </TreeView.ContextMenu>
                </TreeView>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
