<UserControl x:Class="Gilgame.SEWorkbench.Views.Config.UpdaterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gilgame.SEWorkbench.Views.Config"
             mc:Ignorable="d" d:DesignHeight="390" d:DesignWidth="385">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="21" Margin="10,5,0,0" Text="Settings" />
        <Separator HorizontalAlignment="Left" VerticalAlignment="Top" Width="315" Margin="60,14,0,0" />

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Height="21" Margin="10,31,0,0" Text="Automatically Check for Updates:" />
        <CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="290,32,0,0" IsChecked="{Binding CheckForUpdates}" />
    </Grid>
</UserControl>
