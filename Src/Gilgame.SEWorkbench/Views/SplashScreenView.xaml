<Window x:Class="Gilgame.SEWorkbench.Views.SplashScreenView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Space Engineers Workbench is Loading" Height="200" Width="300" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None" Icon="/Gilgame.SEWorkbench;component/Icons/app.ico">
    <Border BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="200">
                    <TextBlock Text="Space Engineers Workbench" HorizontalAlignment="Center" FontSize="16" />
                </Border>
                <Border Width="200">
                    <TextBlock Text="Loading, Please Wait..." HorizontalAlignment="Center" />
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>
